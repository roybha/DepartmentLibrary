@model DepartmentLibrary.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register (Admin Only)</h2>

<form method="post" asp-controller="AuthMvc" asp-action="Register">
    @Html.AntiForgeryToken()

    <div>
        <label for="Email">Email</label>
        <input asp-for="Email" type="email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label for="Password">Password</label>
        <input asp-for="Password" type="password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div>
        <label for="Role">Role</label>
        <input asp-for="Role" type="text" required />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit">Register</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
