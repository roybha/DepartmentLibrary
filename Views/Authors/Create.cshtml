@model Author

@{
    ViewData["Title"] = "Додати автора";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position" class="control-label"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ThesisDefenseDate" class="control-label"></label>
        <input asp-for="ThesisDefenseDate" type="date" class="form-control" />
        <span asp-validation-for="ThesisDefenseDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Скасувати</a>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}