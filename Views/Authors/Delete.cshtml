@model Author

@{
    ViewData["Title"] = "Видалити автора";
}

<h1>@ViewData["Title"]</h1>

<h3>Ви впевнені, що хочете видалити цього автора?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Ім'я:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Телефон:</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Посада:</dt>
        <dd class="col-sm-10">@Model.Position</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Видалити</button>
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>