@model IEnumerable<Author>

@{
    ViewData["Title"] = "Список авторів";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Ім'я</th>
        <th>Телефон</th>
        <th>Посада</th>
        <th>Дата захисту</th>
        <th>Дії</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var author in Model)
    {
        <tr>
            <td>@author.Name</td>
            <td>@author.Phone</td>
            <td>@author.Position</td>
            <td>@author.ThesisDefenseDate?.ToString("dd.MM.yyyy")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@author.Id" class="btn btn-sm btn-warning">Редагувати</a>
                <a asp-action="Delete" asp-route-id="@author.Id" class="btn btn-sm btn-danger">Видалити</a>
                </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Додати нового автора</a>