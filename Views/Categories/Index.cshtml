@model IEnumerable<Category>

@{
    ViewData["Title"] = "Список категорій";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Назва категорії</th>
        <th>Дії</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Title</td>
            <td>
                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Редагувати</a>
                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Видалити</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Додати нову категорію</a>