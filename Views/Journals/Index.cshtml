@model IEnumerable<Journal>

@{
    ViewData["Title"] = "Список журналів";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Назва</th>
        <th>Номер</th>
        <th>Том</th>
        <th>Сторінки</th>
        <th>Видання</th>
        <th>Дії</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var journal in Model)
    {
        <tr>
            <td>@journal.Title</td>
            <td>@journal.Number</td>
            <td>@journal.Volume</td>
            <td>@journal.Pages</td>
            <td>@journal.Edition</td>
            <td>
                <a asp-action="Edit" asp-route-id="@journal.Id" class="btn btn-sm btn-warning">Редагувати</a>
                <a asp-action="Delete" asp-route-id="@journal.Id" class="btn btn-sm btn-danger">Видалити</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Додати новий журнал</a>